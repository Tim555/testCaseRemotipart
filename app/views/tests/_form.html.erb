<%= form_for @test, :html => { :multipart => true }, :remote => true do |f| %>
  <% if @test.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@test.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @test.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>
  <h3>Attachment</h3>
    <%= f.fields_for :attachs do |attach| %>
      <%= render 'attach_fields', f: attach %>
    <% end %>
    <div class="links">
     <%= link_to_add_association 'add attachment', f, :attachs %>
   </div>


  <%= f.submit %>
<% end %>
